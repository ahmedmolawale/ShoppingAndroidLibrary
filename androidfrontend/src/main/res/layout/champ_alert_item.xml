<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_margin="2dp"
              android:layout_height="70dp">

    <ImageView
        android:id="@+id/imageViewMessageIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:src="@drawable/alert_message_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewAlertMessage"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:text="Successful update of Leads - Leads Updated"/>

        <TextView
            android:id="@+id/textViewAlertTime"
            android:layout_width="wrap_content"
            android:layout_below="@+id/textViewAlertMessage"
            android:layout_alignParentRight="true"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/alertDate"
            android:text="10:40 AM - 10/07/2017"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider"/>


    </RelativeLayout>

</LinearLayout>
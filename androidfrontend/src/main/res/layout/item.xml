<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_male3"
            />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageViewAvatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewObjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Akinola Olayinka"
                android:textColor="#000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/textViewObjectAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B94, Ikota Shopping Complex"
                android:textColor="#444"
                android:textStyle="italic"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/imageViewAvatar"
            android:background="#BBB"/>

    </RelativeLayout>


</LinearLayout>